<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.talkable.presentation.talk.feedback.model.Learned.Pronunciation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_pronunciation_word_bg"
            android:paddingHorizontal="17dp"
            android:paddingVertical="4dp"
            android:text="@{model.englishWord}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Talkable.sub_b_14"
            android:textColor="@color/sel_pronunciation_word_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="today" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>