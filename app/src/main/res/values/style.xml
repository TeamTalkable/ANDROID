<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--기본 버튼-->
    <style name="AppButtonOnPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_main_fill_12_rect</item>
        <item name="android:textAppearance">@style/TextAppearance.Talkable.button_b_18</item>
    </style>

    <!--시작 버튼-->
    <style name="StartButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_agreement_selected_next</item>
        <item name="android:textAppearance">@style/TextAppearance.Talkable.button_b_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--챌린지 참가 버튼-->
    <style name="ChallengeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_challenge_selected</item>
        <item name="android:textAppearance">@style/TextAppearance.Talkable.sub_m_16</item>
        <item name="android:textColor">@drawable/sel_challenge_txt_color</item>
    </style>

    <!--챌린지 참여 버튼-->
    <style name="ChallengeJoinButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_fill_main3_8_rec</item>
        <item name="android:backgroundTint">@color/btn_challenge</item>
        <item name="android:textAppearance">@style/TextAppearance.Talkable.sub_m_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--저장 목록-->
    <style name="SavedWordTag" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_main_fill_12_rect</item>
        <item name="android:textAppearance">@style/TextAppearance.Talkable.m_10</item>
    </style>

    <!--요일 버튼-->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <!--알림 요일-->
    <style name="Base.Widget.AppCompat.TextView.AlarmDay" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Talkable.b_16</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--알림 시간 피커-->
    <style name="AlarmNumberPicker">
        <item name="android:textColorPrimary">@color/font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Circle ImageView Style  -->
    <style name="ShapeAppearanceOverlay.App.RoundedImage" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!--단어 퀴즈 버튼-->
    <style name="ReviewButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_white_fill_12_rect</item>
        <item name="android:textAppearance">@style/TextAppearance.Talkable.m_16</item>
    </style>
</resources>